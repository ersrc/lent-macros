define coords {

	Root: Here

	arrow from Root to Root + $1, 0;
	arrow from Root to Root + 0, $1;
	line from Root to Root + -$1, 0;
	line from Root to Root + 0, -$1;
	
	move to Root;

}

define cqdr1 {

	Root: Here

	$2 from Root to Root + $1, 0;
	$3 from Root to Root + 0, $1;
	
	move to Root;

}


define cline {

	Return: Here

	for i=0 to $1 by 1 do {
	
		Cursor: Here
		
		line from Cursor + 0, 0.05 down 0.1;
		
		if "{n}" == $2 then {
			sprintf("%g", i) at Cursor - 0, 0.15;
		} else {
			sprintf($2) at Cursor - 0, 0.15;
		}
		
		line from Cursor to Cursor + 1, 0;
		
		if (i == $1) && ("->" == $3) then {
		
			arrow right 0.1;
		
		}
	
	}
	
	move to Return;

}

define nline {

	cline($1, "{n}", "->")
	
}

define sline {

	cline($1, "", "->")
	
}

